class Solution:
    def validPalindrome(self, s: str) -> bool:

        # 첫 시도 --> Runtime Error

        # def isPalindrome(word: str) -> bool:
        #     n = len(word)
        #     mid = n // 2
        #     for i in range(mid):
        #         if (word[i] != word[n - i - 1]):
        #             return False
        #     return True
        
        # n = len(s)
        # for i in range(n):
        #     if isPalindrome(s[:i] + s[i+1:]):
        #         return True
        # return False

        # 두번째 시도

        def isPalindrome(word: str, l: int, r: int) -> bool:
            while l < r:
                if word[l] != word[r]:
                    return False
                l += 1
                r -= 1
            return True

        right = len(s) - 1
        left = 0
        while left < right:
            if s[left] != s[right]:
                return isPalindrome(s, left + 1, right) or isPalindrome(s, left, right-1)
            left += 1
            right -= 1
        return True