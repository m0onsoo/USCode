class Solution:
    def rob(self, nums: List[int]) -> int:
        if not nums:
            return 0
        if len(nums) <= 3:
            return max(nums)
        def dpProcessor(arr):
            n = len(arr)
            dp = [0] * (n+1)
            dp[1] = arr[0]
            for i in range(2, n+1):
                dp[i] = max(dp[i-2] + arr[i-1], dp[i-1])
            return dp[n]
        
        return max(dpProcessor(nums[:-1]), dpProcessor(nums[1:]))