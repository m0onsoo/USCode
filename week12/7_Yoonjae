class Solution:
    def reverse(self, x: int) -> int:
        sign = -1 if x < 0 else 1
        x = abs(x)
        
        sol = 0
        while x != 0:
            digit = x % 10
            sol = sol * 10 + digit
            x = x // 10
            
        sol = sol * sign

        if sol < -2**31 or sol > 2**31 - 1:
            return 0
            
        return sol